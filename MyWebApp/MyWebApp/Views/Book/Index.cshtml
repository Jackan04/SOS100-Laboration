@model IEnumerable<MyWebApp.Models.Book>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Böcker";
}


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.ErrorMessage
    </div>
}

<div class="btn-crud-container">
    <p><a href="@Url.Action("Create", "Author")" class="btn-crud btn-crud-create">Skapa</a></p>
    <p><a href="@Url.Action("Create", "Author")" class="btn-crud btn-crud-edit">Ändra</a></p>
    <p><a href="@Url.Action("Create", "Author")" class="btn-crud btn-crud-delete">Radera</a></p>
</div>

<table class="table">
    <thead>
    <tr>
        <th>Titel</th>
        <th>Författare</th>
        <th>Publiceringsår</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@(book.Author != null ? book.Author.Name : "No author")</td>
            <td>@book.PublishedYear</td>
        </tr>
    }
    </tbody>
</table>