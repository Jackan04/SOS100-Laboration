@model IEnumerable<MyWebApp.Models.Author>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Författare";
}


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.ErrorMessage
    </div>
}

<div class="btn-crud-container">
    <p><a href="@Url.Action("Create", "Author")" class="btn-crud btn-crud-create">Skapa</a></p>
    <p><a href="@Url.Action("Create", "Author")" class="btn-crud btn-crud-edit">Ändra</a></p>
    <p><a href="@Url.Action("Create", "Author")" class="btn-crud btn-crud-delete">Radera</a></p>
</div>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Namn</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.AuthorID</td>
            <td>@(author.Name)</td>
        </tr>
    }
    </tbody>
</table>