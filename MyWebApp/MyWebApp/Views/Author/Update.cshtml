@model MyWebApp.Models.Author

@{
    Layout = "_Layout";
    ViewData["Title"] = "Uppdatera Författare";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Uppdatera Författare</h2>

    <form method="post" asp-action="Update" class="bg-light p-4 rounded shadow-sm">


        <div class="mb-3">
            <label for="AuthorID" class="form-label">ID</label>
            @*Denna är "Redonly" eftersom att ID automatiskt genereras från databasen*@
            <input type="text" name="AuthorID" value="@Model.AuthorID" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label for="Name" class="form-label">Namn</label>
            <input type="text" name="Name" value="@Model.Name" class="form-control" />
        </div>
        
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-lg">Uppdatera</button>
        </div>
    </form>
</div>